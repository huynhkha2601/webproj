<div class="card">
    <h4 class="card-header d-flex justify-content-between">
        Manager Accounts
        <div>
            <a class="btn btn-outline-primary" href="/admin/manager-accounts/add" role="button">Add Manager
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </h4>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">User ID</th>
            <th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col">Role</th>
            <th scope="col">Active</th>
            <th scope="col">Date Founded</th>
            <th scope="col">&nbsp</th>
        </tr>
        </thead>
        <tbody>
        {{#each this.accounts}}
            <tr>
                <th scope="row">{{userid}}</th>
                <td>{{username}}</td>
                <td>{{formatPassword password}}</td>
                <td>{{role}}</td>
                <td>{{active}}</td>
                <td>{{formatDateTime datefounded}}</td>
                <td class="text-right">
                    <a class="btn btn-sm btn-primary" href="/admin/manager-accounts/edit?userid={{userid}}" role="button">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-danger" href="/admin/manager-accounts/del?userid={{userid}}" role="button">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    </a>
                    {{#if (equal active 1)}}
                        <a class="btn btn-sm btn-outline-danger" href="/admin/manager-accounts/deactive?userid={{userid}}" role="button">
                        <i class="fa fa-ban" aria-hidden="true"></i>
                        </a>
                    {{else}}
                        <a class="btn btn-sm btn-outline-success" href="/admin/manager-accounts/active?userid={{userid}}" role="button">
                        <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                        </a>
                    {{/if}}
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>