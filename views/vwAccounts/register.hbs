<form id="frmRegister" class="form-container" method="post" style="border: 1px solid #fff;padding: 50px 60px;margin-top: 10vh;background-color: white;
    -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
    -moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
    box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);">
    <div class="form-group mb-3">
        <input type="text"  id="username" name="username"
               required>
        <span></span>
        <label for="username"><h4>Username</h4></label>
    </div>
    <div class="form-group mb-3">
        <input type="email"  id="email" name="email" aria-describedby="email" required>
        <span></span>
        <label for="email" ><h4>Email</h4></label>
    </div>
    <div class="form-group mb-3">
        <input type="password"  id="password" name="password" required>
        <span></span>
        <label for="password"><h4>Password</h4></label>
    </div>
    <div class="form-group mb-3">
        <input type="password" id="repeat" required>
        <span></span>
        <label for="repeat" ><h4>Repeat Password</h4></label>
    </div>
    <div class="form-group mb-3 captcha">
        <div class="g-recaptcha"style="transform:scale(0.77);-webkit-transform:scale(0.77);transform-origin:0 0;-webkit-transform-origin:0 0;"
        data-sitekey="6LczRgYeAAAAAHBwdsLr0nHDTD0akCCDTXh0M8X5"></div>
    </div>
    <input id="submit" class="btn-signup" type="submit" value="Sign Up">
    <div class="flex-col-c text-center mt-3">
                <span class="txt1 ">Or You Have Account
                </span>
        <a href="/accounts/login" class="txt2">
            Sign In
        </a>
    </div>
</form>
{{#section 'footer'}}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="/public/js/register.js"></script>
{{/section}}
