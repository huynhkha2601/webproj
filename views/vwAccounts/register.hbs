<div class="row">
    <div class="col-md-4 col-sm4 col-xs-12"></div>
    <div class="col-md-4 col-sm4 col-xs-12">
        <form class="form-container" method="post" style="border: 1px solid #fff;padding: 50px 60px;margin-top: 20vh;
            -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
            box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);">
            <div class="mb-3">
                <label for="username" class="form-label">
                    <h4>Username</h4>
                </label>
                <input type="text" class="form-control" id="username"name="username" aria-describedby="emailHelp" placeholder="Email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">
                    <h4>Password</h4>
                </label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">
                    <h4>Repeat Password</h4>
                </label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success btn-block">Sign Up</button>
            <div class="flex-col-c text-center mt-3">
						<span class="txt1 ">Or You Have Account
						</span>
                <a href="/accounts/login" class="txt2">
                    Sign In
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4 col-sm4 col-xs-12"></div>
</div>

{{#section 'footer'}}
    <script src="/public/js/register.js"></script>
{{/section}}
