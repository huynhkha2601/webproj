<div class="row">
    <div class="col-md-4 col-sm4 col-xs-12"></div>
    <div class="col-md-4 col-sm4 col-xs-12">
        <form class="form-input" method="post" style="border: 1px solid #fff;padding: 50px 60px;margin-top: 20vh;background-color: white;
            -webkit-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);
            box-shadow: 10px 10px 5px 0px rgba(0,0,0,0.75);">
            <div class="mb-3">
                <input type="text" id="username" name="username" aria-describedby="emailHelp"
                       required>
                <span></span>
                <label for="username">
                       <h4>Username</h4>
                </label>
            </div>
            <div class="mb-3">
                <input type="password"id="password" name="password"required>
                <span></span>
                <label for="password">
                    <h4>Password</h4>
                </label>
            </div>
            <div class="text-right">
                <a href="#">Forgot password?</a>
            </div>
            <button type="submit" class="btn-signin" href="/?id={{this.id}}">Sign In</button>
            <div class="txt1 text-center mt-3">
                <div class="flex-c-m">
                    <a href="#" class="align-items-center me-3">
                        <i class="fa fa-facebook fa-2x"></i>
                    </a>
                    <a href="#" class="align-items-center">
                        <i class="fa fa-google fa-2x"></i>
                    </a>
                </div>
            </div>
            <div class="flex-col-c text-center mt-3">
						<span class="txt1 ">Or Sign Up Using
						</span>
                <a href="/accounts/register" class="txt2">
                    Sign Up
                </a>
            </div>
        </form>

    </div>
    <div class="col-md-4 col-sm4 col-xs-12"></div>
</div>

{{#section 'footer'}}
    <script src="/public/js/login.js"></script>
{{/section}}
