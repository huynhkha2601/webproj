<div class="card mt-2">
    <h4 class="card-header d-flex justify-content-between">
        Searching Products
    </h4>

    {{#if empty}}
        <div class="card-body">
            <h4>No products were found based on the keywords you searched for.</h4>
        </div>
        <div class="card-footer">
            <h5>Searching</h5>
        </div>
    {{else}}
        <div class="card-body text-muted">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                    {{#each listPages}}
                        <li class="page-item">
                            <a class="page-link" href="{{url}}?page={{value}}">{{value}}</a>
                        </li>
                    {{/each}}
                </ul>
            </nav>
        </div>
        <div class="card-body">
            <div class="row">
                {{#each products}}
                    <div class="col-sm-6 col-md-4 col-lg-4 mb-3">
                        <div class="card h-100">
                            <img class="card-img-top car" style="height: 20em; width: 100%"
                                 src="/public/images/{{productid}}/title/main.jpg"
                                 alt="Card image cap">
                            <div class="card-body h-25">
                                <h5 class="card-title">{{productname}}</h5>
                                <p class="card-title">{{title}}</p>
                                <p class="card-title text-danger">{{formatMoney price}}</p>
                            </div>
                            <div class="card-footer text-right pr-2">
                                <a href="#" class="btn btn-outline-primary">
                                    <i class="fa fa-gavel" aria-hidden="true"></i>
                                    Auction</a>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
        <div class="card-body text-muted">
            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-end">
                    {{#each listPages}}
                        <li class="page-item">
                            <a class="page-link" href="{{url}}?page={{value}}">{{value}}</a>
                        </li>
                    {{/each}}
                </ul>
            </nav>
        </div>

        <div class="card-footer">
            <div>Searching</div>
        </div>
    {{/if}}
</div>


