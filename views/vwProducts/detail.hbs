<div class="card mt-2 col-md-12 mt-4 d-flex justify-content-center">
    <div class="container-fluid mb-3 mt-3">
        <div class="wrapper row">
            <div class="col-md-6">
                <div id="carousel" class="carousel slide" data-ride="carousel">
                      <ol class="carousel-indicators">
                        <li data-target="#carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel" data-slide-to="1"></li>
                        <li data-target="#carousel" data-slide-to="2"></li>
                        <li data-target="#carousel" data-slide-to="3"></li>
                      </ol>
                      <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="img-fluid" style="height: 30em; width: 100%"
                                      src="/public/images/{{this.product.productid}}/title/main.jpg" alt="main.jpg">
                            </div>
                            <div class="carousel-item">
                                <img class="img-fluid" style="height: 30em; width: 100%"
                                       src="/public/images/{{this.product.productid}}/another/another1.jpg" alt="main.jpg">
                            </div>
                            <div class="carousel-item">
                              <img class="img-fluid" style="height: 30em; width: 100%"
                                   src="/public/images/{{this.product.productid}}/another/another2.jpg" alt="main.jpg">
                            </div>
                            <div class="carousel-item">
                              <img class="img-fluid" style="height: 30em; width: 100%"
                                   src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="main.jpg">
                            </div>
                      </div>
                      <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                      </a>
                      <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                        <i class="fa fa-arrow-right" aria-hidden="true"></i>
                      </a>
                </div>
            </div>
            <form class="col-md-6" id="frmPrice" method="post"
                  action="/products/auction?productid={{this.product.productid}}&price={{this.product.price}}&idbidder={{User.userid}}">
            <div class="col-md-12">
                <div>
                    <h1 class="product-title">{{this.product.productname}}</h1>
                    <h4 class="product-title">{{this.product.title}}</h4>
                    <p class="product-title">{{{this.product.description}}}</p>
                    <h5 class="product-title">Date Published:
                        <span class="text-primary font-weight-bold"> {{{formatDateTime
                                this.product.datepublished}}}</span>
                    </h5>
                    <p class="product-title ">Date End:
                        <span class="text-danger font-weight-bold">{{{formatDateTime this.product.dateend}}}</span>
                    </p>
                <h5 class="price ">Current price:
                    <span class="text-danger font-weight-bold">{{formatMoney this.product.price}}</span>
                </h5>
                <h5 class="price ">Purchase price:
                    <span class="text-danger font-weight-bold">{{formatMoney this.product.purchaseprice}}</span>
                </h5>
                <h5 class="price ">Rating:
                    <span class="text-primary font-weight-bold">{{this.product.rating}}</span>
                </h5>
                <table class="table table-striped table-bordered table">
                        <thead>
                        <th colspan="4" class="text-center">Table of Bidders</th>
                        <tr>
                            <th scope="col">&nbsp</th>
                            <th scope="col">Bidder</th>
                            <th scope="col">Price</th>
                            <th scope="col">Time</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each history}}
                            <tr>
                                <th scope="row">{{increase @index}}</th>
                                <td>{{formatName fullname}}</td>
                                <td class="text-right">{{formatMoney price}}</td>
                                <td class="text-right">{{formatDateTime record}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="col-md-12 w-100 d-inline-block mb-3">
                    <label for="price">Max Price:</label>
                    <input id="max_price" name="max_price" class="col-md-8" type="number" step="100000">
                </div>
                <div class="col-md-12 text-md-center justify-content-center">
                    <button class="btn btn-success col-md-4" type="submit">Set Price</button>
                    <button class="btn btn-primary" type="button">
                        <span class="fa fa-heart {{#if fav}}text-danger{{else}} text-light{{/if}} "></span>
                    </button>
                </div>
            </div>

            </form>
        </div>
    </div>
</div>
<div class="d-flex justify-content-md-center mt-5 mb-5">
    <i class="fa fa-backward d-flex align-items-md-center " aria-hidden="true"></i>
    <img class="img-fluid ml-2 mr-2" style="height: 7em; width: 20%"
         src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="product-same-type-1">
    <img class="img-fluid ml-2 mr-2" style="height: 7em; width: 20%"
         src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="product-same-type-2">
    <img class="img-fluid ml-2 mr-2" style="height: 7em; width: 20%"
         src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="product-same-type-3">
    <img class="img-fluid ml-2 mr-2" style="height: 7em; width: 20%"
         src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="product-same-type-4">
    <img class="img-fluid ml-2 mr-2" style="height: 7em; width: 20%"
         src="/public/images/{{this.product.productid}}/another/another3.jpg" alt="product-same-type-5">
    <i class="fa fa-forward d-flex align-items-md-center" aria-hidden="true"></i>
</div>

